@model List<Social>
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="Social" asp-action="Create" method="post">
                @foreach (var item in Model)
                {
                    <div class="form-group">
                        <label asp-for="@item.Name">Name</label>
                        <input class="form-control" asp-for="@item.Name">
                    </div>
                    <div class="form-group">
                        <label asp-for="@item.Icon">Icon</label>
                        <input class="form-control" asp-for="@item.Icon">
                    </div>
                    <div class="form-group">
                        <label asp-for="@item.Link">Link</label>
                        <input class="form-control" asp-for="@item.Link">
                    </div>
                }

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>

